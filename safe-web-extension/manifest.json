{
  "manifest_version": 3,
  "name": "Safe Web - Dark Pattern Detector",
  "version": "2.0",
  "description": "AI-powered detection and highlighting of manipulative design patterns (Dark Patterns) on web pages.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/tf-stub.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}